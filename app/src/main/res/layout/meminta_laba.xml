<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_layoutLaba"
    android:background="@color/viewfinder_border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="2dp">

    <RelativeLayout
        android:id="@+id/ll_tap"
        android:layout_width="match_parent"
        android:layout_height="27dp"


        >




        <TextView
            android:id="@+id/tv_namaBarang"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Nama Barang"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_jumlahBarang"
            android:layout_toLeftOf="@+id/tv_totalLaba"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="5dp"
            android:layout_marginLeft="4dp"
            android:text="Jumlah Barang"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_totalLaba"

            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_width="90dp"
            android:layout_height="wrap_content"

            android:layout_marginRight="5dp"
            android:text="Total Laba"
            android:textAlignment="viewEnd"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>