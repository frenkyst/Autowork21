<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_layouttransaksi"
    android:background="@color/viewfinder_border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="2dp">

    <RelativeLayout
        android:id="@+id/ll_tap"
        android:layout_width="match_parent"
        android:layout_height="27dp"


        >

        <TextView
            android:id="@+id/tv_barkod"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Code"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_nama"
            android:layout_toRightOf="@+id/tv_barkod"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="Nama"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_jml"
            android:layout_toLeftOf="@+id/tap_edit"
            android:layout_centerInParent="true"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="000"
            android:layout_marginRight="4dp"
            android:textAlignment="viewEnd"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/tap_edit"
            android:layout_toLeftOf="@+id/tv_total"
            android:layout_centerInParent="true"
            android:background="@color/puteh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_popup_edit"
            />

        <TextView
            android:id="@+id/tv_total"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:text="Total"
            android:textAlignment="viewEnd"
            android:textSize="16sp" />



    </RelativeLayout>



</LinearLayout>